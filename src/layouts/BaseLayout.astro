---
import MobileHeader from '../components/MobileHeader.astro';
import SideBar from '../components/SideBar.astro';
import { SITE } from '../config';
import '../styles/app.css';

---


<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{SITE.title}</title>
    </head>

    <body>
      <SideBar/>
      <MobileHeader/>

        <slot/>
    </body>
<footer>
  <a class="mention" href="/MentionsLegales">Mentions légales © <span id="date"></span></a>
</footer>

  <script>
    document.getElementById("date").textContent = String(new Date().getFullYear());
  </script>
</html>

<style lang="scss" is:global>

  html {
    @media (min-width: 660px){
      padding-left: 6rem;
    }
    @media (max-width: 659px){
      padding-top: 6rem;
    }
  }
  body {
    background: #131515;
    color: #E1F6FF;
    font-family: Blinker-Regular;


    footer{
        display: flex;
        justify-content: center;
        align-items: flex-end;
        padding: 2.5rem 0;
        a{
        font-size: 14px;
        font-weight: 700;
        color: #E1F6FF;
        text-decoration: none;
        }
    }
  }
  /*configuration du container*/
  .container{
    margin: 50px 30px !important;
    max-width: 800px;
    margin: 0 auto;
    @media (min-width: 1000px){
      max-width: 800px;
    }
    @media (min-width: 1200px){
      max-width: 1000px;
    }
    @media (min-width: 1460px){
      max-width: 1200px;
    }
  }

  h1 {
    font-size: 48px;
    font-weight: 500;
    color: #E1F6FF;
    font-family: Blinker-Bold;
  }
  h2 {
    font-size: 35px;
    font-weight: 500;
    color: #E1F6FF;
  }
  h3{
    font-size: 25px;
    font-weight: 500;
    color: #E1F6FF;
  }
  h4{
    font-size: 20px;
    font-weight: 500;
    color: #E1F6FF;
  }
  p{
      font-size: 14px;
      font-weight: 400;
      color: #E1F6FF;
  }
  a{
      font-size: 14px;
      font-weight: 700;
      color: #E1F6FF;
  }
  @media screen and (min-width: 768px){
    h1{
      font-size: 56px;
    }
    h2{
      font-size: 48px;
    }
    h3{
      font-size: 28px;
    }
    h4{
      font-size: 24px;
    }
    p{
      font-size: 18px;
    }
    a{
      font-size: 18px;
    }
  }
</style>
