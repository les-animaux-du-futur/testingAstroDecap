<style lang="scss" is:global>
  body {
    background: #131515;
    color: #E1F6FF;
    font-family: DMSans;
  }
  /*configuration du container*/
  .container{
    margin: 50px 30px;
  }

  h1 {
    font-size: 48px;
    font-weight: 500;
    color: #E1F6FF;
    font-family: BlackHan;
  }
  h2 {
    font-size: 35px;
    font-weight: 500;
    color: #E1F6FF;
  }
  h3{
    font-size: 25px;
    font-weight: 500;
    color: #E1F6FF;
  }
  p{
      font-size: 14px;
      font-weight: 400;
      color: #E1F6FF;
  }
  a{
      font-size: 14px;
      font-weight: 700;
      color: #E1F6FF;
  }
  @media screen and (min-width: 768px){
    h1{
      font-size: 56px;
    }
    h2{
      font-size: 48px;
    }
    h3{
      font-size: 28px;
    }
    p{
      font-size: 18px;
    }
    a{
      font-size: 18px;
    }
  }
</style>
