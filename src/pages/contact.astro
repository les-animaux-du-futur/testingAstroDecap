---
import BaseLayout from "../layouts/BaseLayout.astro";


---

<BaseLayout>
    <h1>CONTACT</h1>
    <section class="container">
            <div class="bloc_contact">
                <img class="line" src="../../public/assets/blog/line.svg" alt="line arrondi">
                <div class="bloc_text">
                    <div class="bloc_tittle">
                    <img src="../../public/assets/blog/icone_message.svg" alt="icone d'une bulle de message">
                    <h2>Laissez-nous un petit mot !</h2>
                    </div>
                    <p>Partagez-nous votre projet, vos idées, vos questions et nous reviendrons vers 
                        vous au plus vite.</p>
                    <div class="button">
                        <a class="a_button" href="">
                            <button>Nous contacter</button>
                        </a>
                    </div>
                </div>
                <img src="../../public/assets/blog/chicken.webp" alt="Image d'une pouleosaure">
            </div>
    </section>
    <footer>
        <a class="mention" href="#">Mentions légale © <span id="date"></span></a>
    </footer>
        <script>
        document.getElementById("date").textContent = String(new Date().getFullYear());
        </script>
</BaseLayout>

<style lang="scss">
    body{
        background: #131515;
        footer{
            display: flex;
            justify-content: center;
            align-items: flex-end;
            a{
            font-size: 14px;
            font-weight: 700;
            color: #E1F6FF;
            text-decoration: none;
            }
        }
        h1{
            display: flex;
            justify-content: center;
        }
        .container{
        margin: 50px 30px;
        }
        .bloc_contact{
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
        }
        .bloc_tittle{
            display: flex;
            flex-direction: row;
            align-items: start;
            gap: 8px;
            img{
                margin-top: 1.83rem;
            }
        }
        .bloc_text{
            display: flex;
            flex-direction: column;
            img{
                width: 50px;
                height: 50px;
            }
        }
        button{
            width: 150px;
            height: 53px;
            border-radius: 8px;
            background: #3AE7AB;
            border: none;
            font-weight: 700;
            transition: 0.2s;
            transition: transform 0.3s ease;
            &:hover{
                transition: 0.2s;
                background: #124835;
                color: #E1F6FF;
                filter: brightness(100%);
                transform: scale(1.05);
            }
        }
        .button{
            display: flex;
            justify-content: center;
        }
        @media screen and (min-width: 768px){
            .button{
                justify-content: flex-start;
            }
            .bloc_tittle{
                align-items: center;
                img{
                    margin-top: 0px;
                }
            }
        }
        .line{
            display: block;
            padding-right: 33px;
        }
        @media screen and (max-width: 943px) {
            .line{
            display: none;
            }
        }
    }
</style>